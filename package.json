{
  "name": "jarvis",
  "version": "0.1.0",
  "private": true,
  "description": "JARVIS - Just A Rather Very Intelligent System",
  "keywords": [
    "ai",
    "assistant",
    "jarvis",
    "voice",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/user/jarvis.git"
  },
  "license": "MIT",
  "author": "Daniel Gilhuly",
  "workspaces": [
    "packages/*",
    "services/api-gateway",
    "services/calendar-service"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "clean": "bun run --filter '*' clean",
    "dev": "bun run --filter '*' dev",
    "lint": "bun run --filter '*' lint",
    "test": "bun run --filter '*' test",
    "cli": "bun run --filter @jarvis/cli start",
    "api-gateway": "bun run --filter @jarvis/api-gateway start"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

# JARVIS Environment Configuration
# Copy this file to .env and fill in your values

# ======================
# Environment
# ======================
NODE_ENV=development

# ======================
# API Gateway
# ======================
PORT=3000
CORS_ORIGIN=*

# ======================
# Database
# ======================
DATABASE_URL=postgresql://jarvis:jarvis_dev_password@localhost:5432/jarvis

# ======================
# Redis
# ======================
REDIS_URL=redis://localhost:6379/0

# ======================
# JWT Authentication
# ======================
JWT_SECRET=your-secure-jwt-secret-change-this-in-production
JWT_ALGORITHM=HS256

# ======================
# AWS Configuration
# ======================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# AWS Bedrock (Claude LLM)
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_MAX_TOKENS=4096

# AWS S3 (Audio storage)
S3_AUDIO_BUCKET=jarvis-audio

# ======================
# Service URLs
# ======================
# API Gateway (main entry point)
API_GATEWAY_URL=http://localhost:3000

# Conversation Service (Claude integration)
CONVERSATION_SERVICE_URL=http://localhost:8001

# Voice Processing Service (Transcribe/Polly)
VOICE_PROCESSING_URL=http://localhost:8002

# Weather Service (OpenWeatherMap)
WEATHER_SERVICE_URL=http://localhost:8003

# News Service (NewsAPI)
NEWS_SERVICE_URL=http://localhost:8004

# Briefing Service (Daily briefing aggregation)
BRIEFING_SERVICE_URL=http://localhost:8005

# Calendar Service (Google Calendar)
CALENDAR_SERVICE_URL=http://localhost:8006

# Task Execution Service (Scheduled tasks)
TASK_EXECUTION_URL=http://localhost:8007

# Notification Service (Push notifications)
NOTIFICATION_SERVICE_URL=http://localhost:8008

# User Profile Service (User data and preferences)
USER_PROFILE_URL=http://localhost:8009

# ======================
# External APIs
# ======================
# OpenWeatherMap API (https://openweathermap.org/api)
# Free tier: 1000 calls/day
OPENWEATHER_API_KEY=your-openweather-api-key

# NewsAPI (https://newsapi.org/)
# Free tier: 100 requests/day
NEWSAPI_KEY=your-newsapi-key

# Google Calendar OAuth (https://console.developers.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8006/auth/callback

# ======================
# Push Notifications
# ======================
# Firebase Cloud Messaging (optional)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# ======================
# Voice / Wake Word
# ======================
# Picovoice Porcupine (https://picovoice.ai/)
# For wake word detection
PORCUPINE_ACCESS_KEY=your-porcupine-access-key

# AWS Polly voice settings
POLLY_VOICE_ID=Brian
POLLY_ENGINE=neural

# ======================
# Conversation Settings
# ======================
MAX_CONTEXT_MESSAGES=20
MAX_CONTEXT_TOKENS=8000

# ======================
# Cache TTL Settings (seconds)
# ======================
REDIS_TTL_SHORT=86400
REDIS_TTL_WORKING=604800
WEATHER_CACHE_TTL=1800
NEWS_CACHE_TTL=3600
CALENDAR_CACHE_TTL=900

# ======================
# Development Settings
# ======================
# Enable debug logging
DEBUG=false

# Mock external services for testing
MOCK_EXTERNAL_SERVICES=false
